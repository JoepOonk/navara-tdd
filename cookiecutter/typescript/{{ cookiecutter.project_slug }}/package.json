{
   "name": "{{ cookiecutter.kata }}",
   "version": "1.0.0",
   "description": "{{ cookiecutter.project_short_description }}",
   "main": "index.js",
   "scripts": {
      "build": "tsc",
{% if cookiecutter.jest_tests == "n" %}
      "test": "mocha spec/**/*.spec.ts --require ts-node/register ",
      "watch": "npx mocha spec/**/*.spec.ts src/**/*.ts --require ts-node/register --watch --extension ts"
{% endif %}
{% if cookiecutter.jest_tests == "y" %}
      "test": "jest",
      "watch": "jest --watchAll"
{% endif %}
   },
   "keywords": [
      "tdd",
      "node",
      "mocha",
      "watch",
      "nodemon",
      "test",
      "unittest"
  ],
   "author": "{{ cookiecutter.author }}",  
   "license": "ISC",
   "devDependencies": {
{% if cookiecutter.jest_tests == "n" %}
      "expect.js": "^0.3.1",
      "@types/chai": "^4.3.5",
      "@types/mocha": "^10.0.1",
      "chai": "^4.3.7",
      "mocha": "^10.2.0",
{% endif %}
{% if cookiecutter.jest_tests == "y" %}
      "@types/jest": "^29.5.12",
      "jest": "^29.7",
      "js-big-decimal": "^2.1.0",
      "ts-jest": "^29.2.5",
{% endif %}
      "typescript": "^5.5.3",
      "ts-node": "^10.9.2"
   },
   "dependencies": {
   }
}
